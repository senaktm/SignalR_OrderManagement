@model List<SignalR_WebUI.Dtos.ContactDtos.ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Contact Transactions</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Contact List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can make Contact transactions from the table below
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Footer Location</th>
                                    <th scope="col">Footer Phone</th>
                                    <th scope="col">Footer Email</th>
                                    <th scope="col">Footer Description</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactID</td>
                                        <td>@item.FooterLocation</td>
                                        <td>@item.FooterPhone</td>
                                        <td>@item.FootertEmail</td>
                                        <td>@item.FooterDescription</td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-primary">Edit</a></td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                        <td><a href="/Contact/CreateContact/" class="btn btn-success">Add New Contact</a></td>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>