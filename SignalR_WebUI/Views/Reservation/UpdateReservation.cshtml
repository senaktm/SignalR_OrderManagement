@model SignalR_WebUI.Dtos.ReservationDtos.UpdateReservationDto
@{
    ViewData["Title"] = "UpdateReservation";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h1>UpdateReservation</h1>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Reservation Transactions</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Edit Reservation</div>
                        </div>
                        <input type="hidden" asp-for="ReservationID" />

                        <div class="card-body">
                           
                            <div class="form-group">
                                <label for="reservationName">Reservation Name :</label>
                                <input type="text" class="form-control" id="reservationName" asp-for="ReservationName" placeholder="Enter Name for Reservation">
                            </div>
                            <div class="form-group">
                                <label for="reservationPhone">Reservation Phone :</label>
                                <input type="text" class="form-control" id="reservationPhone" asp-for="ReservationPhone" placeholder="Enter Phone Number for Reservation">
                            </div>
                            <div class="form-group">
                                <label for="reservationEmail">Reservation Email :</label>
                                <input type="email" class="form-control" id="reservationEmail" asp-for="ReservationEmail" placeholder="Enter Email for Reservation">
                            </div>
                            <div class="form-group">
                                <label for="reservationPersonCount">Reservation Person Count :</label>
                                <input type="number" class="form-control" id="reservationPersonCount" asp-for="ReservationPersonCount" placeholder="Enter Person Count for Reservation">
                            </div>
                            <div class="form-group">
                                <label for="reservationDate">Reservation Date :</label>
                                <input type="date" class="form-control" id="reservationDate" asp-for="ReservationDate" placeholder="Enter Date for Reservation">
                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Edit Reservation</button>

                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>