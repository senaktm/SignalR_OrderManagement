@model List<SignalR_WebUI.Dtos.ProductDtos.ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

@* <h1>ProductIndex</h1> *@

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product Transactions</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Product List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can make Product transactions from the table below
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Product Image</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Product Price</th>
									<th scope="col">Product Description</th>
									<th scope="col">Product Category</th>
									<th scope="col">Product Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Edit</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ProductID</td>
										<td>@item.ProductImageUrl</td>
										<td>@item.ProductName</td>
										<td>@item.ProductPrice</td>
										<td>@item.ProductDescription</td>
										<td>@item.CategoryName</td>
										<td>@item.ProductStatus</td>
										<td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Delete</a></td>
										<td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-primary">Edit</a></td>
									</tr>
								}

							</tbody>

						</table>
						<td><a href="/Product/CreateProduct/" class="btn btn-success">Add New Product</a></td>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

