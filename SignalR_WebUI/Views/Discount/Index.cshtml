@model List<SignalR_WebUI.Dtos.DiscountDtos.ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Discount Transactions</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Discount List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can make Discount transactions from the table below
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Discount Title</th>
                                    <th scope="col">Discount Amount</th>
                                    <th scope="col">Discount Description</th>
                                    <th scope="col">Discount ImageUrl</th>
                                    <th scope="col">Discount Status</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DiscountID</td>
                                        <td>@item.DiscountTitle</td>
                                        <td>@item.DiscountAmount</td>
                                        <td>@item.DiscountDescription</td>
                                        <td>@item.DiscountImageUrl</td>
                                        
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-danger">Status</a></td>

                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-primary">Edit</a></td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                        <td><a href="/Discount/CreateDiscount/" class="btn btn-success">Add New Discount</a></td>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>