@model List<SignalR_WebUI.Dtos.SocialMediaDtos.ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">SocialMedia Transactions</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">SocialMedia List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can make SocialMedia transactions from the table below
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">SocialMedia Title</th>
									<th scope="col">SocialMedia Icon</th>
									<th scope="col">SocialMedia Url</th>
									<th scope="col">Delete</th>
									<th scope="col">Edit</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SocialMediaID</td>
										<td>@item.SocialMediaTitle</td>
										<td>@item.SocialMediaIcon</td>
										<td>@item.SocialMediaUrl</td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger">Delete</a></td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-primary">Edit</a></td>
									</tr>
								}

							</tbody>

						</table>
						<td><a href="/SocialMedia/CreateSocialMedia/" class="btn btn-success">Add New SocialMedia</a></td>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

