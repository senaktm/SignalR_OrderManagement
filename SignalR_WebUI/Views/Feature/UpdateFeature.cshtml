@model SignalR_WebUI.Dtos.FeatureDtos.UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

@* <h1>UpdateFeature</h1> *@

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Feature Transactions</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Edit Feature</div>
                        </div>


                        <div class="card-body">
                            <input type="hidden" asp-for="FeatureID" />
                            <div class="form-group">
                                <label for="featureTitle1">Feature Title1 :</label>
                                <input type="text" class="form-control" id="featureTitle1" asp-for="FeatureTitle1" placeholder="Enter Feature Title 1">
                            </div>
                            <div class="form-group">
                                <label for="featureDescription1">Feature Description1 :</label>
                                <input type="text" class="form-control" id="featureDescription1" asp-for="FeatureDescription1" placeholder="Enter Feature Description 1">
                            </div>
                            <div class="form-group">
                                <label for="featureTitle2">Feature Title2 :</label>
                                <input type="text" class="form-control" id="featureTitle2" asp-for="FeatureTitle2" placeholder="Enter Feature Title 2">
                            </div>
                            <div class="form-group">
                                <label for="featureDescription2">Feature Description2 :</label>
                                <input type="text" class="form-control" id="featureDescription2" asp-for="FeatureDescription2" placeholder="Enter Feature Description 2">
                            </div>
                            <div class="form-group">
                                <label for="featureTitle3">Feature Title3 :</label>
                                <input type="text" class="form-control" id="featureTitle3" asp-for="FeatureTitle3" placeholder="Enter Feature Title 3">
                            </div>
                            <div class="form-group">
                                <label for="featureDescription3">Feature Description3 :</label>
                                <input type="text" class="form-control" id="featureDescription3" asp-for="FeatureDescription3" placeholder="Enter Feature Description 3">
                            </div>



                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Edit Feature</button>

                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
